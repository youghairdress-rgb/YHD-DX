{
  "storage": {
    "rules": "storage.rules"
  },
  "firestore": {
    "rules": "firestore.rules"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/requestDiagnosis",
        "function": "requestDiagnosis"
      },
      {
        "source": "/helloWorld",
        "function": "helloWorld"
      },
      {
        "source": "/generateHairstyleImage",
        "function": "generateHairstyleImage"
      },
      {
        "source": "/refineHairstyleImage",
        "function": "refineHairstyleImage"
      },
      {
        "source": "/createFirebaseCustomToken",
        "function": "createFirebaseCustomToken"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs20"
  }
}